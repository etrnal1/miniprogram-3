/* pages/post/post.wxss */
.imgItem{
    width: 700rpx;
    margin: 25rpx;
    height: 100rpx;
}
/* 轮播图 */
.imgItem image{
    width: 700rpx;
    height:  300rpx;

}
.post-container{
    flex-direction: column;
    display:flex;
    margin: 20prx 0 40prx;
    background-color:white;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-bottom: 5px;


}
.post-author-date{
    margin: 10rpx 0 20prx 10prx;
    display: flex;
    flex-direction: row;
    align-items: center;
}
/* 字体 */
.post-title {
    font-size: 30rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 20px;
    margin-left: 25px;
}
.post-artitle{
    font-size: 30rpx;
   
    color:green;
    margin-bottom: 20px;
    margin-left: 25px;
}
/* 下个class */
.post-like a{
    display: flex;
    flex-direction: row;
    font-size: 25rpx;
    line-height: 1px;
    margin-left: 10px;
    align-items: center;
}
.post-like text{
    margin-right: 20px;
}
.post-author-date image{
    width: 5rpx;
    height:5rpx;
}



/* 图片 */
.post-like image{
    width: 260rpx;
    height: 160rpx;
}